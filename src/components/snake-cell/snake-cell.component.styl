@require 'styles/config/vars'

.snake-cell
    position relative
    display block
    max-width $coll-size
    width $coll-size
    height $coll-size
    &:not(:last-child)
        border-right 1px solid rgba(0, 0, 0, 0.1)

    font-size larger
    text-align center
    cursor pointer
    user-select none
    transition background .3s
    flex-shrink 1
    flex-grow 1
    &__value
        position absolute
        width 100%
        height 100%
        top 50%
        margin-top -.5em
        &--checked
            display none
    &--checked
        background-color $color-light-gray
        & ^[0]__value
            animation .3s rotate
            display none
            &--checked
                display block
                animation .3s rotate reverse
@keyframes rotate {
    0% {
        transform rotateY(0deg)
        display block
    }
    100% {
        transform rotateY(90deg)
        display none
    }
}
